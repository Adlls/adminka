<div class="admin_container">

    <div class="admin_top">
        <div class="header_admin clearfix">
            <h2>Welcome {{name}}!</h2>
            <p>{{role}}</p>
        </div>

        <div class="btn_logout_admin clearfix">
            <a href="/auth/logout/" class="btn_logout">Выйти</a>
        </div>
    </div>

    <div class="admin_middle">
        <div class="admin_options">
            <ul>
                        <li>
                                <button type="submit" id="btn_view">view users</button>
                       </li>

                        <li>
                                <button id="clear_btnAdd">add user</button>

                        </li>
                </form>
            </ul>
        </div>

        <div class="admin_content">

            <form id="addUser", name="addUser">
                <label for="name">Name: </label> <br>
                <input name="name" type="text" id="name"> <br>
                <label for="login">Login: </label> <br>
                <input name="login" type="text" id="login"> <br>
                <label for="pass">Password: </label> <br>
                <input name="pass" type="password" id="password"> <br>
                <label for="email">Email: </label> <br>
                <input name="email" type="email" id="email"> <br>
                <label for="phone">Phone: </label> <br>
                <input name="phone" type="tel" id="phone"> <br>
                <label for="role">Role: </label> <br>
                <input name="role" type="role" id="role"> <br>
                <button type="hidden" name="addUser" value=true id="btn_add">Добавить</button>
            </form>

            {{#if users}}
                <table class="getTableUsers">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Login</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Role</th>
                        {{#each users}}
                            <tr>
                                <td>{{this._id}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.login}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.phone}}</td>
                                <td>{{this.role}}</td>
                            </tr>
                        {{/each}}

                </table>
            {{/if}}
        </div>
    </div>
</div>

